<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sdl_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.libsdl.app.SDLSurface
        android:id="@+id/sdl_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/sdl_resume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="播放"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/sdl_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/sdl_resume"
        android:text="暂停"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/sdl_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/sdl_pause"
        android:text="退出"
        android:textAllCaps="false" />

</RelativeLayout>